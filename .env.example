# =============================================================================
# DJANGO ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# Never commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Type
# -----------------------------------------------------------------------------
# Options: development | production
# Default: development
DJANGO_ENV=development

# -----------------------------------------------------------------------------
# Django Core Settings (Required for Production)
# -----------------------------------------------------------------------------
# Generate a new secret key using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production

# Comma-separated list of allowed hosts (Required for Production)
# Example: example.com,www.example.com,api.example.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
# For Development: SQLite is used by default (no configuration needed)
# For Production/Docker: Configure PostgreSQL connection below

# Database name
DB_NAME=helloapp

# Database user
DB_USER=helloapp

# Database password
DB_PASSWORD=helloapppass

# Database host (use 'postgres' for Docker, 'localhost' for local)
DB_HOST=postgres

# Database port (5432 is the default PostgreSQL port)
DB_PORT=5432

# Database connection health check timeout in seconds (for Docker startup)
DB_HEALTH_TIMEOUT=180

# -----------------------------------------------------------------------------
# pgAdmin Configuration (PostgreSQL Management UI)
# -----------------------------------------------------------------------------
# pgAdmin default email for login
PGADMIN_EMAIL=admin@admin.com

# pgAdmin default password for login
PGADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Redis Configuration (for caching/sessions)
# -----------------------------------------------------------------------------
# Redis host (use 'redis' for Docker, 'localhost' for local)
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Email Configuration (Production)
# -----------------------------------------------------------------------------
# Email backend host
EMAIL_HOST=smtp.gmail.com

# Email backend port
EMAIL_PORT=587

# Email account username
EMAIL_HOST_USER=your_email@example.com

# Email account password or app password
EMAIL_HOST_PASSWORD=your_email_password_here

# -----------------------------------------------------------------------------
# Additional Production Settings (Optional)
# -----------------------------------------------------------------------------
# Static files root (where collectstatic will gather files)
# STATIC_ROOT=/path/to/staticfiles

# Media files root (where user uploads will be stored)
# MEDIA_ROOT=/path/to/media

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO
